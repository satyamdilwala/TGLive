    <!-- 
      Android Vector Drawable for the Gift Icon.
      The colors are taken from the enhanced SVG version.
      - Box Color: #e74c3c (Festive Red)
      - Ribbon Color: #f1c40f (Golden Yellow)
      - Knot Color: #d4ac0d (Darker Gold)
    -->

    <!-- Box Base -->
    <path
        android:fillColor="#e74c3c"
        android:pathData="M15,40 h70 v50 h-70 z"/>

    <!-- Lid -->
    <path
        android:fillColor="#e74c3c"
        android:pathData="M10,30 h80 v15 h-80 z"/>

    <!-- Vertical Ribbon -->
    <path
        android:fillColor="#f1c40f"
        android:pathData="M45,30 h10 v60 h-10 z"/>

    <!-- Horizontal Ribbon -->
    <path
        android:fillColor="#f1c40f"
        android:pathData="M10,34 h80 v7 h-80 z"/>

    <!-- Bow - Left Loop -->
    <path
        android:fillColor="#f1c40f"
        android:pathData="M50,30 C35,30 30,10 45,15 L50,30 Z"/>

    <!-- Bow - Right Loop -->
    <path
        android:fillColor="#f1c40f"
        android:pathData="M50,30 C65,30 70,10 55,15 L50,30 Z"/>

    <!-- Bow - Center Knot -->
    <path
        android:fillColor="#d4ac0d"
        android:pathData="M50,27 a4,4 0 1,0 0.1,0 Z"/>

