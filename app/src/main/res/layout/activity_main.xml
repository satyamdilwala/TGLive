<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Login Section -->
    <LinearLayout
        android:id="@+id/loginSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        android:visibility="visible">

        <!-- App Logo -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:src="@mipmap/ic_launcher" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to TG Live"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/welcomeSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please confirm your country and enter your phone number"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

        <!-- OTP Header (Hidden by default) -->
        <LinearLayout
            android:id="@+id/otpHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:rotation="90"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/otpHeaderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verification Code"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- OTP Info Text (Hidden by default) -->
        <TextView
            android:id="@+id/otpInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We've sent a verification code to"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/phoneNumberDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+91 9022893397"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:visibility="gone" />

        <!-- Phone Input Section -->
        <LinearLayout
            android:id="@+id/phoneInputSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Country Selector -->
            <LinearLayout
                android:id="@+id/countrySelector"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_input_field"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/countryFlag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‡®ðŸ‡³"
                    android:textSize="24sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/countryName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="India"
                    android:textSize="16sp"
                    android:textColor="@color/input_text" />

                <TextView
                    android:id="@+id/countryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down" />

            </LinearLayout>

            <!-- Phone Number Input -->
            <EditText
                android:id="@+id/phoneNumberInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textSize="16sp"
                android:textColor="@color/input_text"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/bg_input_field"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Verification Code Input -->
        <EditText
            android:id="@+id/codeInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Verification Code"
            android:inputType="number"
            android:textSize="16sp"
            android:textColor="@color/input_text"
            android:textColorHint="@color/text_hint"
            android:background="@drawable/bg_input_field"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Two-Factor Authentication Password"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColor="@color/input_text"
            android:textColorHint="@color/text_hint"
            android:background="@drawable/bg_input_field"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Send Code"
            android:textColor="@color/text_on_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_primary"
            android:layout_marginBottom="16dp" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to login"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

    </LinearLayout>

    <!-- Profile Section -->
    <ScrollView
        android:id="@+id/profileSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:padding="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Profile Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Information"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Profile Avatar -->
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_profile"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:padding="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Profile Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/displayNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display Name: "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/handleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Handle: "
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/bioText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bio: "
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/userIdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User ID: "
                    android:textSize="14sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginBottom="8dp" />

                <!-- Telegram Session Information -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telegram Session Info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is how your session appears in Telegram:"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/telegramFullSessionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Session info will appear here"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Channel Input Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Channel Information"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter a channel handle to view detailed information and live video chat status"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Channel Handle Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_input_field"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@"
                        android:textSize="16sp"
                        android:textColor="@color/input_text"
                        android:textStyle="bold"
                        android:paddingStart="16dp"
                        android:paddingEnd="4dp" />

                    <EditText
                        android:id="@+id/channelHandleInput"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="channelname"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/input_text"
                        android:textColorHint="@color/text_hint"
                        android:background="@android:color/transparent"
                        android:paddingEnd="16dp"
                        android:maxLines="1"
                        android:imeOptions="actionDone" />

                </LinearLayout>

                <!-- Show Channel Button -->
                <Button
                    android:id="@+id/showChannelButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Show"
                    android:textColor="@color/text_on_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_primary" />

            </LinearLayout>

            <!-- Logout Button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Logout"
                android:textColor="@color/text_on_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/error" />

        </LinearLayout>

    </ScrollView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:visibility="gone"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <!-- App Logo -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:src="@mipmap/ic_launcher" />

            <!-- Loading Spinner -->
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true" />

            <!-- Loading Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>